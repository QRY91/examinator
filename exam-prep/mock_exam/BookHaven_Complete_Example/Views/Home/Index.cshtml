@{
    ViewData["Title"] = "Welcome to BookHaven";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-3 text-primary">📚 Welcome to BookHaven</h1>
        <p class="lead">Your digital library management system</p>
        <p class="text-muted">Discover, manage, and organize your book collection with ease</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="display-4 text-primary">📖</i>
                    </div>
                    <h5 class="card-title">Browse Books</h5>
                    <p class="card-text">Explore our extensive collection of books across various genres and categories.</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">View Books</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="display-4 text-success">✍️</i>
                    </div>
                    <h5 class="card-title">Meet Authors</h5>
                    <p class="card-text">Discover talented authors and learn about their literary contributions.</p>
                    <a asp-controller="Authors" asp-action="Index" class="btn btn-success">View Authors</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="display-4 text-info">📂</i>
                    </div>
                    <h5 class="card-title">Explore Categories</h5>
                    <p class="card-text">Browse books by categories to find exactly what you're looking for.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-info">View Categories</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">🚀 Quick Actions</h4>
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Books" asp-action="Create" class="btn btn-outline-primary btn-lg w-100">
                                <i class="bi bi-plus-circle"></i><br>Add New Book
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Authors" asp-action="Create" class="btn btn-outline-success btn-lg w-100">
                                <i class="bi bi-person-plus"></i><br>Add New Author
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-info btn-lg w-100">
                                <i class="bi bi-folder-plus"></i><br>Add New Category
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
